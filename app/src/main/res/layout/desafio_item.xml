<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#EFF2F7"
    android:layout_width="match_parent"
    android:layout_height="120dp">

        <RelativeLayout
            android:id="@+id/content_percent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/lbporcentagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:background="@drawable/circle"
                android:textColor="@android:color/white"
                android:text="100%"
                android:gravity="center"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/content_objetivo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:descendantFocusability="blocksDescendants"
            android:layout_toRightOf="@+id/content_percent">

               <TextView
                  android:layout_centerInParent="true"
                   android:id="@+id/tv_objetivo"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Carro Novo"
                   android:textStyle="bold"
                   android:textSize="20dp"
                   android:layout_marginBottom="10dp"
                   android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:id="@+id/content_data"
                android:layout_below="@+id/tv_objetivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp">

                <TextView
                    android:id="@+id/tv_datainicial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="26/04/2017"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center"
                    android:text="-"/>

                <TextView
                    android:id="@+id/tv_datafinal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26/04/2018"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_visualizacao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/content_data"
                android:layout_centerInParent="true"
                android:text="Semanalmente" />
        </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/content_objetivo">

        <TextView
            android:id="@+id/flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"/>

       <ImageView
           android:id="@+id/icon"
           android:layout_centerHorizontal="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/flag"
           android:src="@drawable/porco"/>

        <TextView
            android:id="@+id/tv_valorinicial"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:text="1000.00"/>
    </RelativeLayout>
</RelativeLayout>